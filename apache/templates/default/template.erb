<VirtualHost *:<%= @port %>>
        ServerAdmin <%= @serveradmin %>
        ServerName <%= @servername %>
        ServerAlias www.<%= @servername %>
        DocumentRoot <%= @document_root %>
        ErrorLog <%= @document_root %>/logs/error.log
        <Directory <%= @document_root %> >
	Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
        
	</Directory>
</VirtualHost>
